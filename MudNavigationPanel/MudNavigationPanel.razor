@inherits MudComponentBase

@if (CardSettings is not null)
{
    <MudPaper Style="@Stylename" Width="100%" Height="100%">

        <MudGrid Spacing="100" Justify="Justify.SpaceEvenly">
            @if (@UseAuthorization)
            {
                foreach (var setting in CardSettings)
                {
                    if(!string.IsNullOrEmpty(setting.Role))
                    {
                        <AuthorizeView Roles=@setting.Role>
                            <MudNavigationCard 
                                Title=@setting.Title 
                                Icon=@setting.Icon 
                                Href=@setting.Href
                                Height=@CardHeight 
                                Width=@CardWidth 
                                BackgroundColor=@CardBackgroundColor
                                TitleColor=@CardTitleColor 
                                IconColor=@CardIconColor 
                                IconSize=@CardIconSize />
                        </AuthorizeView>
                    }
                }
            }
            else
            {
                foreach (var setting in CardSettings)
                {
                     <MudNavigationCard 
                        Title=@setting.Title 
                        Icon=@setting.Icon 
                        Href=@setting.Href
                        Height=@CardHeight 
                        Width=@CardWidth 
                        BackgroundColor=@CardBackgroundColor
                        TitleColor=@CardTitleColor 
                        IconColor=@CardIconColor 
                        IconSize=@CardIconSize />
                }
            }
        </MudGrid>

    </MudPaper>
}


